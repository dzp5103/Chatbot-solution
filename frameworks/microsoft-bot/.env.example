# Microsoft Bot Framework Environment Configuration

# Bot Framework Configuration
MicrosoftAppId=
MicrosoftAppPassword=
MicrosoftAppType=MultiTenant

# Server Configuration
PORT=3978

# Azure Cognitive Services - LUIS
LuisAppId=
LuisAPIKey=
LuisAPIHostName=

# Azure Cognitive Services - QnA Maker
QnAKnowledgebaseId=
QnAAuthKey=
QnAEndpointHostName=

# Azure Application Insights (Optional)
InstrumentationKey=

# Azure Cosmos DB (Optional - for persistent state)
CosmosDbEndpoint=
CosmosDbAuthKey=
CosmosDbDatabaseId=chatbot-db
CosmosDbContainerId=bot-state

# External API Keys (Optional)
WeatherApiKey=
CalendarApiKey=

# Logging Configuration
LOG_LEVEL=info
NODE_ENV=development

# Security Settings
SESSION_SECRET=your-session-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Webhook Configuration (for proactive messaging)
WEBHOOK_SECRET=your-webhook-secret

# Channel-specific Configuration
TEAMS_APP_ID=
SLACK_BOT_TOKEN=
TELEGRAM_BOT_TOKEN=

# Development Tools
ENABLE_DEBUG_LOGGING=true
ENABLE_CONVERSATION_LOGGING=false
BOT_FRAMEWORK_EMULATOR=true